{
  "name": "msnr-ta-orders",
  "version": "0.0.1",
  "description": "Orders microservice for a ticketing application",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node build/src/index.js",
    "start:dev": "env-cmd -f ./config/.env.development ts-node-dev src/index.ts",
    "test": "env-cmd -f ./config/.env.test jest --no-cache",
    "test:watch": "env-cmd -f ./config/.env.test jest --watchAll --no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ],
    "modulePathIgnorePatterns": [
      "build"
    ]
  },
  "keywords": [],
  "author": "Alejandro Rodarte",
  "license": "ISC",
  "dependencies": {
    "@msnr-ticketing-app/common": "^0.0.28",
    "cors": "^2.8.5",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/supertest": "^2.0.12",
    "env-cmd": "^10.1.0",
    "jest": "^28.1.0",
    "mongodb-memory-server": "^8.5.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}

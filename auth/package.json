{
  "name": "msrn-ta-auth",
  "version": "0.0.1",
  "description": "Authentication microservice for a ticketing applicatin",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node build/src/index.js",
    "start:dev": "env-cmd -f ./config/.env.development ts-node-dev src/index.ts",
    "test": "env-cmd -f ./config/.env.test jest --no-cache",
    "test:watch": "env-cmd -f ./config/.env.test jest --watchAll --no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ],
    "modulePathIgnorePatterns": [
      "build"
    ]
  },
  "keywords": [],
  "author": "Alejandro Rodarte",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.9",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/supertest": "^2.0.12",
    "env-cmd": "^10.1.0",
    "jest": "^27.5.1",
    "mongodb-memory-server": "^8.4.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@msnr-ticketing-app/common": "^0.0.25",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express-async-errors": "^3.1.1"
  }
}
